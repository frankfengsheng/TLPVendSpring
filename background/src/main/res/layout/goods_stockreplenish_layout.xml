<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <com.tcn.uicommon.titlebar.Titlebar
        android:id="@+id/goods_stockreplenish_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >
    </com.tcn.uicommon.titlebar.Titlebar>

    <LinearLayout
        android:id="@+id/rep_cabinet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/goods_stockreplenish_titlebar">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rep_set"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_px_50"
        android:orientation="horizontal"
        android:layout_marginTop="3px"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/rep_cabinet">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:textSize="24sp"
            android:textColor="@color/text_color"
            android:text="补货"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:textSize="24sp"
            android:textColor="@color/text_color"
            android:text="测试"/>

    </LinearLayout>

    <Button
        android:id="@+id/rep_btn_all"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_px_50"
        android:layout_below="@id/rep_set"
        android:layout_marginLeft="3px"
        android:layout_marginTop="10px"
        android:padding="5px"
        android:textSize="@dimen/bk_tz_26"
        android:textColor="@color/text_color"
        android:text="@string/req_fill_all"
        android:background="@drawable/btn_selector_no_circle"/>

    <Button
        android:id="@+id/rep_btn_clean_fault"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_px_50"
        android:layout_below="@id/rep_set"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:padding="5px"
        android:textSize="@dimen/bk_tz_26"
        android:textColor="@color/text_color"
        android:text="@string/backgroound_clear_fault"
        android:layout_toRightOf="@id/rep_btn_all"
        android:background="@drawable/btn_selector_no_circle"/>

    <LinearLayout
        android:id="@+id/dictTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/layout_px_50"
        android:gravity="center"
        android:layout_below="@id/rep_btn_all">

    </LinearLayout>

</RelativeLayout>