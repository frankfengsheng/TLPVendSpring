<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/circlebuttonstyle" >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/warm_prompt"
        android:textColor="@color/text_color_dialog_title"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="28sp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/text_color_dialog_title"
        />
    
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ensurealter"
        android:textColor="@color/text_color_black"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="10dp"
        />
    
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/text_background"
        />
    
    <LinearLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/psw_ensureof"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/backgroound_ensureof"
            android:background="@drawable/circlebtn"
            android:textSize="20sp"
            android:padding="10dp"
            />
        
         <TextView
	        android:layout_width="2dp"
	        android:layout_height="fill_parent"
	        android:background="@color/text_background"
        />
        
        <Button
            android:id="@+id/psw_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/backgroound_cancel"
            android:background="@drawable/rightcirclebtn"
            android:textSize="20sp"
            android:padding="10dp"
            />
    </LinearLayout>

</LinearLayout>
