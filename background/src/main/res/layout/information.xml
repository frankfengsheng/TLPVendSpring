<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" 
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mmtitle_bg" >

        <Button
            android:id="@+id/info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@drawable/weixin_selector_btn_back"
            android:padding="18px"
            android:text="@string/back"
             style="@style/menubutton" />

        <TextView
            android:text="@string/information"
            style="@style/menutop" />

        <Button
            android:id="@+id/btn_debug1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:alpha="0"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/btn_debug2"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginRight="10px"
            android:alpha="0"
            android:layout_toLeftOf="@id/btn_debug1"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/lrmarginson2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/lrmargin"
            android:orientation="vertical" >

            <TextView
                style="@style/aisle_text"
                android:text="@string/ip_address" />

            <EditText
                android:id="@+id/ip_address_edit"
                style="@style/aisle_edittext"
                android:singleLine="true"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/lrmarginson"
            android:orientation="vertical" >

            <TextView
                style="@style/aisle_text"
                android:text="@string/socket" />

            <EditText
                android:id="@+id/socket_edit"
                style="@style/aisle_edittext"
                android:singleLine="true"
                 />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             style="@style/lrmarginson"
            android:orientation="vertical" >

            <TextView
                style="@style/aisle_text"
                android:text="@string/machine_id" />

            <EditText
                android:id="@+id/machine_id_edit"
                style="@style/aisle_edittext"
                android:singleLine="true"
               />
        </LinearLayout>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_default_ad"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_pay_tips"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_pay_first_tips"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_pay_second_tips"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_welcom_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_keyboard_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_keyboard_input_tips"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_card_text"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/lrmarginss"
            android:orientation="vertical" >

            <TextView
                style="@style/aisle_text"
                android:text="@string/unit_price" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/info_unit_price_edit"
                    style="@style/aisle_edittext1"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_alignBottom="@id/info_unit_price_edit"
                    android:layout_marginRight="8px"
                    android:layout_toLeftOf="@+id/info_unit_price_btn"
                    android:background="@color/text_background" />

                <Button
                    android:id="@+id/info_unit_price_btn"
                    android:layout_width="45px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6px"
                    android:background="@mipmap/fni" />
            </RelativeLayout>
        </LinearLayout>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_reboot_time"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_paytime_select"
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_advert_poll_time"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_standby_image_time"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_image_play_interval_time"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_item_count_page"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_slotno_digt_count"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonEdit
            android:id="@+id/info_price_point_count"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            android:visibility="gone"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEdit>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_screen_protect"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/page_display"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_full_screen"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_advert_position"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_advert_standby"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_show_type"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_voice"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_show_single_code"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_reboot"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_show_shopping"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_app_running_check"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <com.tcn.uicommon.button.ButtonSwitch
            android:id="@+id/info_show_tap_screen_text"
            android:layout_width="match_parent"
            android:layout_height="80px"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonSwitch>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/lrmarginson1"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/info_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:paddingBottom="10px"
                android:paddingTop="10px"
                android:text="@string/backgroound_ensureof"
                style="@style/menubutton"/>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>