<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    >

	<com.tcn.uicommon.titlebar.Titlebar
		android:id="@+id/password_titlebar"
		android:layout_width="match_parent"
		android:layout_height="100px"
		>

	</com.tcn.uicommon.titlebar.Titlebar>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<com.tcn.uicommon.button.ButtonSwitch
				android:id="@+id/password_login_switch"
				android:layout_width="match_parent"
				android:layout_height="80px"
				style="@style/lrmarginss"
				android:layout_marginTop="40px">

			</com.tcn.uicommon.button.ButtonSwitch>

			<LinearLayout
				android:id="@+id/password_linear"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@style/lrmarginson3"
				android:orientation="vertical" >
			</LinearLayout>

			<com.tcn.uicommon.button.ButtonSwitch
				android:id="@+id/password_login_switch_rep"
				android:layout_width="match_parent"
				android:layout_height="80px"
				style="@style/lrmarginss"
				android:layout_marginTop="40px">

			</com.tcn.uicommon.button.ButtonSwitch>

			<LinearLayout
				android:id="@+id/password_linear_rep"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@style/lrmarginson3"
				android:orientation="vertical" >
			</LinearLayout>

			<com.tcn.uicommon.button.ButtonSwitch
				android:id="@+id/password_quick_login_switch"
				android:layout_width="match_parent"
				android:layout_height="80px"
				style="@style/lrmarginss"
				android:layout_marginTop="40px">

			</com.tcn.uicommon.button.ButtonSwitch>

			<LinearLayout
				android:id="@+id/password_quick_linear"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				style="@style/lrmarginson3"
				android:orientation="vertical" >
			</LinearLayout>

			<Button
				android:id="@+id/password_confirm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/ensureofalter"
				android:background="@drawable/btn_selector"
				style="@style/menubutton"
				android:layout_marginTop="20px"
				android:layout_marginBottom="10px"
				android:layout_marginLeft="20px"
				android:layout_marginRight="20px"
				/>

		</LinearLayout>
	</ScrollView>
</LinearLayout>