<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.tcn.uicommon.titlebar.Titlebar
        android:id="@+id/goods_manage_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >
    </com.tcn.uicommon.titlebar.Titlebar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_manage_titlebar"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="vertical" >
            <Button
                android:id="@+id/menu_slot_manage"
                android:layout_below="@id/goods_manage_titlebar"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Button
                android:id="@+id/menu_slot_err"
                android:layout_below="@id/menu_slot_manage"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Button
                android:id="@+id/menu_goods_bank"
                android:layout_below="@id/menu_slot_err"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Button
                android:id="@+id/menu_replenishment"
                android:layout_below="@id/menu_goods_bank"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Button
                android:id="@+id/menu_stockcapacity"
                android:layout_below="@id/menu_replenishment"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Button
                android:id="@+id/menu_repl_stock"
                android:layout_below="@id/menu_stockcapacity"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss"
                android:textSize="@dimen/btn_bkg_mg_tz"
                android:background="@drawable/btn_selector">

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>