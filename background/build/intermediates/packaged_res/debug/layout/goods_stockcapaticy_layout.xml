<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.tcn.uicommon.titlebar.Titlebar
        android:id="@+id/goods_stockcapacity_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >
    </com.tcn.uicommon.titlebar.Titlebar>

    <com.tcn.uicommon.button.ButtonEdit
        android:id="@+id/goods_modify_fill_stock"
        android:layout_width="match_parent"
        android:layout_height="100px"
        style="@style/lrmarginss">

    </com.tcn.uicommon.button.ButtonEdit>

    <com.tcn.uicommon.button.ButtonBatchSelect
        android:id="@+id/goods_modify_stock"
        android:layout_width="match_parent"
        android:layout_height="150px"
        style="@style/lrmarginss"
        android:layout_marginTop="20px">

    </com.tcn.uicommon.button.ButtonBatchSelect>

    <com.tcn.uicommon.button.ButtonBatchSelect
        android:id="@+id/goods_modify_capacity"
        android:layout_width="match_parent"
        android:layout_height="150px"
        style="@style/lrmarginss"
        android:layout_marginTop="10px">

    </com.tcn.uicommon.button.ButtonBatchSelect>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="20px"
        android:id="@+id/goods_stockcapacity_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/goods_stockcapacity_prepage"
            style="@style/menu_button"
            android:background="@drawable/playupselector"
            android:onClick="goods_prepage"
            />

        <TextView
            android:id="@+id/goods_stockcapacity_page_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1/5"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/goods_stockcapacity_nextpage"
            style="@style/menu_button"
            android:background="@drawable/playupselector"
            android:onClick="goods_nextpage"
            />
    </LinearLayout>

</LinearLayout>