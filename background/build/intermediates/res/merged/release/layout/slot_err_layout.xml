<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.tcn.uicommon.titlebar.Titlebar
        android:id="@+id/slot_err_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >
    </com.tcn.uicommon.titlebar.Titlebar>

    <com.tcn.uicommon.button.ButtonEdit
        android:id="@+id/slot_err_clean"
        android:layout_width="match_parent"
        android:layout_height="100px"
        style="@style/lrmarginss"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

    </com.tcn.uicommon.button.ButtonEdit>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tcn.uicommon.button.ButtonEditSelectD
            android:id="@+id/slot_err_query_drive_fault"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="1"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEditSelectD>

        <com.tcn.uicommon.button.ButtonEditSelectD
            android:id="@+id/slot_err_clear_drive_fault"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="1"
            style="@style/lrmarginss">

        </com.tcn.uicommon.button.ButtonEditSelectD>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="20px"
        android:id="@+id/slot_err_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/slot_err_prepage"
            style="@style/menu_button"
            android:background="@drawable/playupselector"
            android:onClick="goods_prepage"
            />

        <TextView
            android:id="@+id/slot_err_page_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1/5"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/slot_err_nextpage"
            style="@style/menu_button"
            android:background="@drawable/playupselector"
            android:onClick="goods_nextpage"
            />
    </LinearLayout>

</LinearLayout>