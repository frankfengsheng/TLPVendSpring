<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">


    <com.tcn.uicommon.titlebar.Titlebar
        android:id="@+id/menu_setttings_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >

    </com.tcn.uicommon.titlebar.Titlebar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/menu_drive_spring"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

            <Button
                android:id="@+id/menu_drive_lift"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

            <Button
                android:id="@+id/menu_drive_lattice"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

            <Button
                android:id="@+id/menu_drive_coff"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

            <Button
                android:id="@+id/menu_drive_snake"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

            <Button
                android:id="@+id/menu_drive_light"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/lrmarginss">

            </Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
