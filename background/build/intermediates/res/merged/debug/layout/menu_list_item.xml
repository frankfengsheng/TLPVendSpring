<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
    <ImageView
        android:id="@+id/menuimg"
        android:layout_width="@dimen/main_menu_item_img"
        android:layout_height="@dimen/main_menu_item_img"
        android:layout_gravity="center"
        />
    <TextView
         android:id="@+id/menu_btn"
         style="@style/menu_button"
         android:layout_marginTop="@dimen/main_menu_item_tv_mtop"
         android:layout_gravity="center"
         android:textSize="@dimen/main_menu_item_tz"
         android:drawablePadding="15px"
         android:textColor="@color/text_color_black"
          />

</LinearLayout>
