<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mmtitle_bg" >

        <Button
            android:id="@+id/login_back"
            style="@style/menubutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/weixin_selector_btn_back"
            android:padding="18dp"
            android:text="@string/back" />

        <TextView
            style="@style/menutop"
            android:text="@string/login" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/login_edit"
        android:layout_height="30dp"
        android:id="@+id/login_txt"
        style="@style/error" />
    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/login_layout"
            style="@style/lrmargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/login_edit"
                android:focusable="false"
                android:layout_height="50dp"
                style="@style/aisle_edittext1"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/login_img"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/lock" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/login_edit"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/login_img"
                android:background="@color/text_background" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number1"
                    android:background="@drawable/button_circle_top_left_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number2"
                    android:background="@drawable/button_green_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number3"
                    android:background="@drawable/button_circle_top_right_style"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number4"
                    android:background="@drawable/button_green_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number5"
                    android:background="@drawable/button_green_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number6"
                    android:background="@drawable/button_green_style"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number7"
                    android:background="@drawable/button_green_style"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number8"
                    android:background="@drawable/button_green_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number9"
                    android:background="@drawable/button_green_style"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/backgroound_cancel"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/lm_clear"
                    android:background="@drawable/button_circle_bottom_left_style"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="38sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/number0"
                    android:background="@drawable/button_green_style"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/backgroound_ensure"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/login_btn"
                    android:background="@drawable/button_circle_bottom_right_style"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>