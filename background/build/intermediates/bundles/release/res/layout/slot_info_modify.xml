<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mmtitle_bg"
        >

        <Button
            android:id="@+id/slot_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/weixin_selector_btn_back"
            android:padding="18dp"
            android:text="@string/back"
            style="@style/menubutton" />

        <TextView
            android:text="@string/slot_info_modify_slot_info"
            style="@style/menutop"
            />

        <Button
            android:id="@+id/slot_info_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/weixin_selector_btn_back"
            android:padding="18dp"
            android:text="同步数据"
            style="@style/menubutton" />

    </RelativeLayout>

    <com.tcn.uicommon.button.ButtonBatchSelect
        android:id="@+id/slot_info_modify_goods_code"
        android:layout_width="match_parent"
        android:layout_height="150px"
        style="@style/lrmarginss"
        android:layout_marginTop="100px">

    </com.tcn.uicommon.button.ButtonBatchSelect>

    <com.tcn.uicommon.button.ButtonBatchSelect
        android:id="@+id/slot_info_modify_goods_price"
        android:layout_width="match_parent"
        android:layout_height="150px"
        style="@style/lrmarginss"
        android:layout_marginTop="50px">

    </com.tcn.uicommon.button.ButtonBatchSelect>

    <com.tcn.uicommon.button.ButtonBatchSelect
        android:id="@+id/slot_info_modify_goods_stock"
        android:layout_width="match_parent"
        android:layout_height="150px"
        style="@style/lrmarginss"
        android:layout_marginTop="50px">

    </com.tcn.uicommon.button.ButtonBatchSelect>

</LinearLayout>
