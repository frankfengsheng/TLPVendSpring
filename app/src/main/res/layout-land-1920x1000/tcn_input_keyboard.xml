<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@mipmap/blue_trans_bg">
    <TextView
        android:id="@+id/time_textview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="right|center_vertical"
        android:layout_alignParentTop="true"
        android:textSize="36sp"
        android:padding="16dp"
        android:text=""
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="35sp"
        android:layout_below="@id/time_textview"
        android:background="@drawable/edittext_simple_style"
        android:hint="@string/ui_take_goods_code"
        android:textColor="@android:color/holo_orange_light"
        android:textCursorDrawable="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="15"
        android:id="@+id/out_put" />`


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/out_put"
        android:orientation="vertical"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:background="@mipmap/key_bkg"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number1"
                android:background="@drawable/button_circle_top_left_style"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="2"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number2"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="3"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number3"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/backgroound_cancel"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/clear"
                android:background="@drawable/button_circle_top_right_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="4"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number4"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="5"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number5"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="6"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number6"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="0"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_circle_bottom_left_style"
                android:text="7"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number7"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="8"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number8"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_green_style"
                android:text="9"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/number9"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_circle_bottom_right_style"
                android:text="@string/backgroound_ensure"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:id="@+id/enter"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/key_board_back"
        android:layout_width="150px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50px"
        android:layout_marginBottom="50px"
        android:background="@drawable/button_circle_style"
        android:text="@string/back"
        android:textColor="@color/whitesmoke"
        android:textSize="38sp" />

</RelativeLayout>
