<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.tlp.vendspring.activity.admin.ShelfMangerActivity">
    <include
        layout="@layout/ms_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_shelf_shop_editor_left_lineheigh"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="@dimen/ms_shelf_shop_editor_left_width"
            android:layout_height="@dimen/ms_shop_editor_editext_heigh"
            android:text="货道号"
            android:gravity="center"
            android:textSize="@dimen/ms_left_text_size"
            android:textColor="@color/text_color_black"
            android:background="@drawable/bg_editext_gray_border_circle"
            android:layout_marginLeft="@dimen/ms_margin_left"/>
        <EditText
            android:id="@+id/ms_edt_shop_edit_aisle_start"
            android:gravity="center"
            android:layout_width="@dimen/ms_shop_editor_editext_width"
            android:textSize="@dimen/ms_left_text_size"
            android:layout_height="@dimen/ms_shop_editor_editext_heigh"
            android:background="@drawable/bg_editext_gray_border_circle"/>
        <TextView
            android:layout_width="50px"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:gravity="center"
            android:text="-"/>
        <EditText
            android:id="@+id/ms_edt_shop_edit_aisle_end"
            android:gravity="center"
            android:layout_width="@dimen/ms_shop_editor_editext_width"
            android:layout_height="@dimen/ms_shop_editor_editext_heigh"
            android:background="@drawable/bg_editext_gray_border_circle"/>
    </LinearLayout>
    <!--商品类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_shelf_shop_editor_left_lineheigh"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="@dimen/ms_shelf_shop_editor_left_width"
            android:layout_height="@dimen/ms_shop_editor_editext_heigh"
            android:text="库存"
            android:gravity="center"
            android:textSize="@dimen/ms_left_text_size"
            android:textColor="@color/text_color_black"
            android:background="@drawable/bg_editext_gray_border_circle"
            android:layout_marginLeft="@dimen/ms_margin_left" />
        <EditText
            android:id="@+id/ms_edt_shop_edit_inventory"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginRight="15px"
            android:layout_marginLeft="15px"
            android:textSize="@dimen/ms_left_text_size"
            android:layout_height="@dimen/ms_shop_editor_editext_heigh"
            android:background="@drawable/bg_editext_gray_border_circle"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_save"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ms_margin_left"
            android:textSize="@dimen/ms_left_text_size"
            android:text="确认修改"/>
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/btn_save"
            android:layout_marginLeft="@dimen/ms_margin_left"
            android:layout_marginBottom="@dimen/ms_margin_left"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/ms_left_text_size"
            android:text="@string/ms_cancle"/>
    </RelativeLayout>
</LinearLayout>
