<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/circlebuttonstyle"
    >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_choose"
        android:textColor="#4e5d72"
        android:padding="5dp"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#4e5d72"
        />
    <ListView
        android:id="@+id/dialog_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none"
        />
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#dddddd"
        />
    
    <LinearLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_ensureof"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/backgroound_ensureof"
            android:background="@drawable/circlebtn"
            android:padding="10dp"
            />
        
         <TextView
	        android:layout_width="2dp"
	        android:layout_height="fill_parent"
	        android:background="#dddddd"
        />
        
        <Button
            android:id="@+id/dialog_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/backgroound_cancel"
            android:background="@drawable/rightcirclebtn"
            android:padding="10dp"
            />
    </LinearLayout>
        
</LinearLayout>
