<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:id="@+id/singlelayout">

    <ImageView
        android:id="@+id/menu_img"
         android:layout_width="200dp"
         android:layout_height="180dp"
         android:src="@mipmap/default_ticket_poster_pic"
         android:orientation="horizontal"
         android:textColor="@color/red"
         android:textSize="25sp"
         android:gravity="center"
         android:padding="10dp"
         android:background="@drawable/top_circle"
         android:visibility="gone"
        />

    <TextView
         android:id="@+id/menu_txt"
         android:layout_width="150dp"
         android:layout_height="50dp"
         android:layout_below="@+id/menu_img"
         android:textSize="30sp"
         android:gravity="center"
         android:textColor="@color/whitesmoke"
         android:background="@drawable/bottom_circle"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:visibility="gone"
        />
     <TextView
         android:id="@+id/menu_text"
        android:layout_width="150dp"
         android:layout_height="50dp"
         android:layout_below="@+id/menu_txt"
         android:textSize="25sp"
         android:gravity="center"
          android:textColor="@color/whitesmoke"
          android:background="@drawable/bottom_circle"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:visibility="gone"
        />
    <!-- 
    <TextView
         android:id="@+id/menu_text"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:layout_below="@+id/menu_img"
         android:gravity="center_horizontal"
          /> -->

</LinearLayout>
