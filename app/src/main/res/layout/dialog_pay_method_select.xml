<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:layout_centerInParent="true"
		android:background="@drawable/dialoback"
		>

		<ImageView
			android:id="@+id/pay_method_cash"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_alignParentLeft="true"
			android:src="@mipmap/app_fund"
			/>

		<ImageView
			android:id="@+id/pay_method_wechat"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_toRightOf="@id/pay_method_cash"
			android:layout_marginLeft="20dp"
			android:src="@mipmap/wxlogo"
			/>

		<ImageView
			android:id="@+id/pay_method_ali"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_toRightOf="@id/pay_method_wechat"
			android:layout_marginLeft="20dp"
			android:src="@mipmap/alilogo"
			/>


		<Button
			android:id="@+id/pay_select_sure"
			android:layout_width="150dp"
			android:layout_height="80dp"
			android:layout_marginLeft="50dp"
			android:layout_alignParentBottom="true"
			android:background="@drawable/probtnselector"
			android:text="@string/backgroound_ensure"
			android:layout_marginBottom="20dp"
			android:textColor="@color/whitesmoke"
			android:textSize="38sp" />

		<Button
			android:id="@+id/pay_select_cancel"
			android:layout_width="150dp"
			android:layout_height="80dp"
			android:layout_marginLeft="90dp"
			android:layout_toRightOf="@id/pay_select_sure"
			android:layout_alignParentBottom="true"
			android:background="@drawable/probtnselector"
			android:text="@string/backgroound_cancel"
			android:layout_marginBottom="20dp"
			android:textColor="@color/whitesmoke"
			android:textSize="38sp" />

	</RelativeLayout>



</RelativeLayout>