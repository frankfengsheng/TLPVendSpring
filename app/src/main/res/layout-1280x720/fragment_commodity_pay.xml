<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<!-- 顶部标题 -->
	<TextView
		android:id="@+id/textView_top_title"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:textColor="@color/orangered"
		android:text="@string/commodity_pay"
		android:background="#50ffffff"
		android:gravity="center"
		android:layout_marginRight="2dp"
		android:layout_marginEnd="2dp"
		android:textSize="28sp"/>

	<!-- 商品图片和商品详情 -->
	<LinearLayout
		android:id="@+id/tablelayout_commodity_details"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="55"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp">

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:layout_marginRight="2dp"
			android:layout_marginEnd="2dp"
			android:background="#50ffffff">

			<ImageView
				android:id="@+id/imgsrc"
				android:layout_width="420dp"
				android:layout_height="420dp"
				android:layout_centerInParent="true">
			</ImageView>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:background="#50ffffff">

			<TextView
				android:id="@+id/menu_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toLeftOf="@+id/txt"
				android:layout_marginTop="5dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textColor="@color/red"
				android:textSize="40sp" />

			<TextView
				android:id="@+id/txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="5dp"
				android:padding="5dp"
				android:text="@string/ui_back_to_shop"
				android:textColor="@color/red"
				android:textSize="38sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="horizontal" >

				<LinearLayout
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginTop="50dp"
					android:layout_marginLeft="50dp"
					android:gravity="left"
					>

					<TextView
						android:id="@+id/name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/orangered"
						android:textSize="24sp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="10dp"
						>
						<TextView
							android:id="@+id/num_pic"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							/>

						<TextView
							android:id="@+id/num"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textStyle="bold"
							android:layout_marginLeft="15dp"
							android:textSize="30sp" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="10dp"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:text="@string/ui_pay_unit_price"
							/>

						<TextView
							android:id="@+id/money"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:textColor="@color/orangered"
							android:textSize="30sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/money_pic"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:textStyle="bold"
							android:layout_marginLeft="10dp"
							/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="10dp"
						android:visibility="gone"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:text="@string/ui_pay_amount_input"/>


						<TextView
							android:id="@+id/price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="30dp"
							android:textColor="@color/orangered"
							android:textSize="30sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/price_pic"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:layout_marginLeft="10dp"
							android:textStyle="bold" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/post_linear"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="10dp"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:text="@string/ui_pay_amount_credit_card"/>

						<TextView
							android:id="@+id/postprice"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="30dp"
							android:textColor="@color/orangered"
							android:textSize="30sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/postprice_pic"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/orangered"
							android:textSize="28sp"
							android:layout_marginLeft="10dp"
							android:textStyle="bold" />

					</LinearLayout>

				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/paylinear"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="42"
		android:gravity="center"
		android:orientation="horizontal"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="#50ffffff"
		>

		<LinearLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:id="@+id/alipay_linear"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:visibility="gone"
			>

			<TextView
				android:id="@+id/alitxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/ui_pay_scan_alipay_qrcode"
				android:textColor="@color/red"
				android:visibility="gone"
				android:textSize="17sp"
				android:gravity="center"
				/>

			<ImageView
				android:id="@+id/alipay_pic"
				android:layout_width="250dp"
				android:layout_height="250dp"
				android:background="@drawable/toastbackbutton"
				/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/alihint_linear"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<ImageView
					android:id="@+id/alihint_logo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:background="@mipmap/alilogo"
					/>

				<ImageView
					android:id="@+id/alihint_pic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:background="@mipmap/fm_play_page_playing_loading" />

			</RelativeLayout>

			<TextView
				android:id="@+id/alihinttxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/notify_loading"
				android:textColor="@color/whitesmoke"
				android:textSize="28sp"
				android:gravity="center"
				/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/wxpay_linear"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:visibility="invisible"
			>

			<TextView
				android:id="@+id/wxtxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/ui_pay_scan_wechat_qrcode"
				android:textColor="@color/red"
				android:visibility="gone"
				android:textSize="17sp"
				android:gravity="center"
				/>

			<ImageView
				android:id="@+id/wxpay_pic"
				android:layout_width="250dp"
				android:layout_height="250dp"
				android:background="@drawable/toastbackbutton"
				/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/wxhint_linear"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<ImageView
					android:id="@+id/wxhint_logo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:background="@mipmap/wxlogo"
					/>

				<ImageView
					android:id="@+id/wxhint_pic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:background="@mipmap/fm_play_page_playing_loading" />

			</RelativeLayout>

			<TextView
				android:id="@+id/wxhinttxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/notify_loading"
				android:textColor="@color/whitesmoke"
				android:textSize="28sp"
				android:gravity="center"
				/>

		</LinearLayout>


	</LinearLayout>



</LinearLayout>